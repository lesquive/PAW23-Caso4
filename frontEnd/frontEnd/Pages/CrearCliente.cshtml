@page
@model AutoFixRepairAPI.Pages.CrearClienteModel
@{
    ViewData["Title"] = "Crear Cliente";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="cliente.Nombre"></label>
        <input asp-for="cliente.Nombre" class="form-control" />
        <span asp-validation-for="cliente.Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="cliente.Apellido"></label>
        <input asp-for="cliente.Apellido" class="form-control" />
        <span asp-validation-for="cliente.Apellido" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="cliente.Email"></label>
        <input asp-for="cliente.Email" class="form-control" />
        <span asp-validation-for="cliente.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="cliente.Telefono"></label>
        <input asp-for="cliente.Telefono" class="form-control" />
        <span asp-validation-for="cliente.Telefono" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="cliente.Direccion"></label>
        <input asp-for="cliente.Direccion" class="form-control" />
        <span asp-validation-for="cliente.Direccion" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cliente</button>
</form>
